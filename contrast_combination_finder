#wir gehen davon aus, dass es 4 hautt√∂ne und haarfarben zur auswahl gibt
# 1 und 2 sind hell, 3 und 4 sind dunkel

skin_tone = 1
hair_color = 1

if skin_tone == 1 or skin_tone == 2:
  skin_tone = "light"
else:
  skin_tone = "dark"
 
if hair_color == 1 or hair_color == 2:
  hair_color = "light"
 else:
  hair_color = "dark"


if hair_color == "light" and skin_tone == "light":
  contrast = "low"
  
elif hair_color == "light" and skin_tone == "dark":
  contrast = "medium"
  
elif hair_color == "dark" and skin_tone == "light":
  contrast = "high"
  
elif hair_color == "dark" and skin_tone == "dark":
  contrast = "medium"

#high contrast: complimentary, triad
#medium contrast: any
#low contrast: analogue, triad

if contrast == "high":
  colours_of_clothes = "complimentary"

if contrast == "medium":
  colours_of_clothes = "any"

if contrast == "low":
  colours_of_clothes = "analogue"

